<div class="container">
  <%= form_for @product do |f| %>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="center-align input-field col s4 offset-s4">
            <%= f.label :product_name %>
            <%= f.text_field :product_name %>
          </div>
        </div>
        <div class="row">
          <div class="center-align input-field col s4 offset-s4">
            <%= f.label :image_url %>
            <%= f.text_field :image_url %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s4 offset-s4">
            <%= f.label :product_description %>
            <%= f.text_area :product_description, :id => "text_area1", :class => "materialize-textarea" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s2 offset-s4">
            <%= f.label :price %>
            <%= f.text_field :price %>
          </div>
          <div class="input-field col s2">
            <%= f.label :quantity %>
            <%= f.number_field :quantity %>
          </div>
        </div>
        <div class="row">
          <%= f.submit 'Submit', :class => "waves-effect waves-light btn"  %>
        </div>
      </form>
    </div>
  <% end %>
</div>
