<h1> Create new Product </h1>

<%= form_for @product, url: products_path do |f| %>
  <p>
    <%= f.label :product_name %>
    <%= f.text_field :product_name %>
  </p>
  <p>
    <%= f.label :product_description %>
    <%= f.text_area :product_description %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
