<h1 class="center"> Admin's Catalog </h1>


<div class="container">

  <table>
    <thead>
      <tr>
        <th data-field="product-name">Product Name</th>
        <th data-field="product_description">Description</th>
        <th data-field="price">Price</th>
        <th data-field="quantity">Quantity</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= link_to "#{product.product_name}", product_path(product) %></td>
        <td><%= product.product_description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td> <%= link_to 'Edit', edit_product_path(product) %></td>
        <td> <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

