<h1> Product Catalog </h1>

<p><strong> <%= link_to 'Create new Product', new_product_path %></strong></p>

<ul>
  <% @products.each do |product| %>
  <li>
    <p>
      <strong><%= link_to product.product_name, product_path(product) %></strong>
    </p>
    <p>
      <%= product.product_description %>
    </p>
    <p>
      $<%= product.price %>
    </p>

    <p> <%= link_to 'Edit', edit_product_path(product) %></p>
    <p> <%= link_to 'Delete', product_path(product), method: :delete, data: { confirm: 'Are you sure?'} %></p>
  </li>
  <% end %>
</ul>
