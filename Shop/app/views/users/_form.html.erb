<div class="container">
  <%= form_for @user do |f| %>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s4 offset-s4">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
          <div class="input-field col s4 offset-s4">
            <%= f.label :username %>
            <%= f.text_field :username %>
          </div>
          <div class="input-field col s4 offset-s4">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
          <div class="input-field col s4 offset-s4">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
          </div>
          <div class="row">
            <%= f.submit 'Register', :class => "waves-effect waves-light btn" %>
          </div>
        </div>
      </form>
    </div>
</div>
